<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/logo2"
    tools:context="com.apkglobal.safetyfirst.Asthma2Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        android:textSize="20dp"
        android:padding="20dp"
        android:text="3 Mild attacks should ease within minutes.If not,ask the casualty to use their inhaler again"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        android:textSize="20dp"
        android:padding="20dp"
        android:text="4 Dial 999/112ulty talking for an ambulance if the attack worsens or if the casualty has diffic"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prev"
            android:textColor="#034e61"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="230dp"
            android:id="@+id/btn_prev"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="next"
            android:textColor="#0d5561"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="230dp"
            android:id="@+id/btn_next"
            />
    </RelativeLayout>

</LinearLayout>
