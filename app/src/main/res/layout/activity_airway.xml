<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/logo2"
    tools:context="com.apkglobal.safetyfirst.airwayActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:text="Airway"
        android:textColor="#009"
        android:textSize="30dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="When a casualty is unresponsive, their tongue can easily block their airway."
        android:textSize="20dp"
        android:textColor="#009"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Keep the airway open"
        android:textSize="20dp"
        android:textColor="#009"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:text="Breathing"
        android:textColor="#009"
        android:textSize="30dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Once the airway is open, check the casualty's breathing:"
        android:textColor="#009"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="1 Place your cheek above the casualty's mouth/nose"
        android:textSize="20dp"
        android:textColor="#009"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="2 Listen,look and feel for breathing"
        android:textSize="20dp"
        android:textColor="#009"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_marginTop="110dp"
            android:layout_height="wrap_content"
            android:text="Prev"
            android:id="@+id/btn_prev"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#009"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="280dp"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/btn_next"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#009"
            />

    </RelativeLayout>




</LinearLayout>
